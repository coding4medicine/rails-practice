<p id="notice"><%= notice %></p>

<h1>Referrals</h1>

<table>
  <thead>
    <tr>
      <th>Oldemail</th>
      <th>Newemail</th>
      <th>Old id</th>
      <th>New id</th>
      <th>Bonuspaid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referrals.each do |referral| %>
      <tr>
        <td><%= referral.OldEmail %></td>
        <td><%= referral.NewEmail %></td>
        <td><%= referral.old_id %></td>
        <td><%= referral.new_id %></td>
        <td><%= referral.bonuspaid %></td>
        <td><%= link_to 'Show', referral %></td>
        <td><%= link_to 'Edit', edit_referral_path(referral) %></td>
        <td><%= link_to 'Destroy', referral, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

