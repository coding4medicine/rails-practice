<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.image %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Buy', new_buy_book_path(:book_id=> book.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.price %></td>
	<td><%= link_to 'Buy', new_buy_plan_path(:plan_id=>plan.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

